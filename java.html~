<script>
    document.writeln("<h2>Math properties</h2>");
    document.writeln("<b>Math.E:</b> " + Math.E + "<br>");
    document.writeln("<b>Math.PI:</b> " + Math.PI + "<br>");
    document.writeln("<b>Math.SQRT2:</b> " + Math.SQRT2 + "<br>");
    document.writeln("<b>Math.SQRT1_2:</b> " + Math.SQRT1_2 + "<br>");
    document.writeln("<b>Math.LN2:</b> " + Math.LN2 + "<br>");
    document.writeln("<b>Math.LN10:</b> " + Math.LN10 + "<br>");
    document.writeln("<b>Math.LOG2E:</b> " + Math.LOG2E + "<br>");
    document.writeln("<b>Math.LOG10E:</b> " + Math.LOG10E + "<br>");
  document.writeln("<h1>Math Object </h1>");
  let x=7.58;
  document.writeln("<h2>number is 7.58</h2>");
  document.writeln("<br> nearest integer :"+Math.round(x));
  document.writeln("<br>integer part :"+Math.trunc(x));
  document.writeln("<br>squre root :"+Math.sqrt(x));
  document.writeln("<br>maximum value from (4,3,7,-1): " + Math.max(4,3,7,-1));
  document.writeln("<br>mniimum value from (4,3,7,-1): " + Math.min(4,3,7,-1));
   document.writeln("<h1> String methods</h1>");
   let text="Anfin";
   document.writeln("<br>string : " + text);
   document.writeln("<br>length of string : " + text.length);
   let text1=text.toUpperCase();
   let text2=text.toLowerCase();
   let text3="brother";
   let text4=text + text3;
   let text5=text4.replace("Anfin","Alphin");
   document.writeln("<br>string converted into uppercase : " + text1);
   document.writeln("<br>string converted into lowercase : " + text2);
   document.writeln("<br>join a string : " + text4);
   document.writeln("<br>Replace the string  : " + text5);
   
  
</script>

